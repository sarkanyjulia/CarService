@using CarService.Website.Models;

@{
    ViewData["Title"] = "Bejelentkezés";
}

@model LoginViewModel
@* majd bekérjük/megjelenítjük a foglalás adatait *@

    <form asp-controller="Account" asp-action="Login" id="login-form">
        @* Automatikus védelem XSRF támadás ellen *@
        <div id="login-table">
            <table >
                <tr>
                    <td colspan="2">
                        <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="h4">
                            Bejelentkezési adatok:
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        Felhasználónév:
                    </td>
                    <td class="failureNotification">
                        <input asp-for="UserName" />
                        <span asp-validation-for="UserName"></span>
                    </td>
                </tr>
                <tr>
                    <td width="120">
                        Jelszó:
                    </td>
                    <td class="failureNotification">
                        <input asp-for="UserPassword" />
                        <span asp-validation-for="UserPassword"></span>
                    </td>
                </tr>
                <tr>
                    <td width="120"></td>
                    <td>
                        <input asp-for="RememberLogin" />
                        Bejelentkezés megjegyzése
                    </td>
                </tr>
                <tr>
                    <td colspan="2" height="50">
                        <input type="submit" value="Bejelentkezés" class="button" />
                    </td>
                </tr>
            </table>
            <a asp-controller="Account" asp-action="Register">Regisztráció</a>
        </div>
    </form>



@section Scripts
    {
    @* jQuery Validation használata a kliens oldali validációra *@
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}
