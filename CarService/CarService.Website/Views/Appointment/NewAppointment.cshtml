
@{
    ViewData["Title"] = "Foglalás";
}

@model AppointmentViewModel

<h2>Foglalás részletei</h2>

<form asp-controller="Appointment" asp-action="Create">
    <div class=" form-group">
        <label>Dátum:</label>
        @Model.Start.ToShortDateString()
    </div>
    <div class=" form-group">
        <label>Időpont:</label>
        @Model.Start.ToShortTimeString() - @Model.Start.AddHours(1).ToShortTimeString()
    </div>
    <div class=" form-group">
        <label>Szerelő:</label>
        @Model.MechanicName
    </div>
    <div class=" form-group">
        <label asp-for="@Model.WorkType">Munka típusa:</label>
        <select asp-for="@Model.WorkType" asp-items="Html.GetEnumSelectList<WorkType>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Note">Megjegyzés:</label>
        <textarea asp-for="@Model.Note"></textarea>
    </div>
    <div>
        <input type="submit" value="Mentés" class="btn btn-primary" />
        <a class="btn btn-primary" asp-action="Cancel" asp-route-start="@Model.Start">Mégsem</a>
    </div>
    
    <div>
        <input asp-for="@Model.Start" />
        <input asp-for="@Model.MechanicId" />
        <input asp-for="@Model.MechanicName" />
    </div>

</form>


